// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    isAdmin       Boolean   @default(false)
    accounts      Account[]
    sessions      Session[]
    apiKeys       ApiKey[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model ContactSubmission {
    id        String   @id @default(cuid())
    name      String
    email     String?  // Optional - allows anonymous messages
    ipHash    String?  // SHA-256 hash of IP for anonymous rate limiting
    message   String   @db.Text
    createdAt DateTime @default(now())

    @@index([createdAt])
    @@index([ipHash])
    @@index([email])
}

model BlogPost {
    id            String    @id @default(cuid())
    title         String
    slug          String    @unique
    description   String    @db.Text
    excerpt       String?   @db.Text
    content       String    @db.Text
    featuredImage String?
    published     Boolean   @default(false)
    scheduledAt   DateTime? // When to auto-publish (null = not scheduled)
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt
    tags          Tag[]     @relation("BlogPostTags")

    @@index([published, createdAt])
    @@index([createdAt])
    @@index([scheduledAt])
}

model Tag {
    id        String     @id @default(cuid())
    name      String     @unique
    slug      String     @unique
    createdAt DateTime   @default(now())
    posts     BlogPost[] @relation("BlogPostTags")

    @@index([slug])
}

model ApiKey {
    id          String    @id @default(cuid())
    name        String    @default("Default API Key")
    hashedKey   String    @unique
    prefix      String
    lastUsedAt  DateTime?
    createdAt   DateTime  @default(now())
    createdById String
    createdBy   User      @relation(fields: [createdById], references: [id], onDelete: Cascade)

    @@index([hashedKey])
    @@index([prefix])
}

model PageView {
    id          String   @id @default(cuid())
    pathname    String   // e.g., "/blog/my-post"
    ipHash      String   // SHA-256 hash of IP for privacy
    country     String?  // e.g., "United States"
    countryCode String?  // e.g., "US"
    region      String?  // e.g., "California"
    city        String?  // e.g., "San Francisco"
    latitude    Float?   // For heatmap visualization
    longitude   Float?   // For heatmap visualization
    userAgent   String?  // Browser/device info
    createdAt   DateTime @default(now())

    @@index([createdAt])
    @@index([pathname])
    @@index([countryCode])
    @@index([ipHash])
}
